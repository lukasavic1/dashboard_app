// prisma/schema.prisma

model Asset {
  id        String   @id
  name      String
  cotCode   String?
  createdAt DateTime @default(now())

  // ðŸ‘‡ Add this line to complete the relation
  CotSnapshot CotSnapshot[]
}

model CotSnapshot {
  id         String   @id @default(uuid())
  assetId    String
  reportDate DateTime
  rawData    Json
  derivedData Json
  createdAt  DateTime @default(now())

  // This relates back to the Asset model above
  Asset Asset @relation(fields: [assetId], references: [id])

  @@unique([assetId, reportDate])
}

model SeasonalitySnapshot {
  id        String   @id @default(uuid())
  assetId   String
  date      DateTime
  score     Float
  details   Json
  createdAt DateTime @default(now())
}

model User {
  id                String    @id // Firebase UID
  email             String    @unique
  stripeCustomerId  String?   @unique
  stripeSubscriptionId String? @unique
  subscriptionStatus String?  // active, canceled, past_due, trialing, etc.
  subscriptionEndsAt DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}


generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
